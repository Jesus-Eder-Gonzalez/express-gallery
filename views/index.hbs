 {{#if photos}} {{#each photos}} {{#if @first}}
<div class="first_photo">
  <div class="photo_photo">
    <a href="/gallery/{{this.attributes.id}}">
      <img src="{{this.attributes.link}}">
    </a>
    <hr>
  </div>
</div>
{{else}}
<div class="photo_card">
  <div class="photo_photo">
    <a href="/gallery/{{this.attributes.id}}">
      <img src="{{this.attributes.link}}">
    </a>
  </div>
  <div class="photo_info">
    <p>{{this.attributes.title}} - {{this.attributes.link}}</p>
  </div>
</div>
{{/if}} {{/each}} {{else}}
<h3>There are currently no photos.</h3>
{{/if}} {{#if loggedIn}}
<form action='/photos/new' method='get'>
  <button type='submit'>Add a new photo</button>
</form>
{{/if}}{{#each errors}}
<h3>{{message}}</h3>
{{/each}}